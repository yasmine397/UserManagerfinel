<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tvbookphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="etphotobook"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvDeseridsionbookItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="gfgujy" />

        <TextView
            android:id="@+id/tvbooknamebookItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="thyeh" />

        <TextView
            android:id="@+id/tvdatebookItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="dsd" />

        <TextView
            android:id="@+id/tvlanguagebookItem"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="1"
            android:hint="vddsdddd" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>